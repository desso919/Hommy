package com.hommy.service;

import com.hommy.service.interfaces.IDeviceSubscriber;
import com.hommy.service.interfaces.ITopic;
import com.hommy.service.subscribers.AirConditioner;
import com.hommy.service.topics.TemperatureTopic;

public class ObserverPatternTest {

	public static void main(String[] args) {
		// create subject
		ITopic tempopic = new TemperatureTopic();

		// create observers
		IDeviceSubscriber obj1 = new AirConditioner("Air Conditioner");
		IDeviceSubscriber obj1 = new AirConditioner("Air Conditioner");


		// register observers to the subject
		topic.register(obj1);
		topic.register(obj2);
		topic.register(obj3);

		// attach observer to subject
		obj1.setSubject(topic);
		obj2.setSubject(topic);
		obj3.setSubject(topic);

		// check if any update is available
		obj1.update();

		// now send message to subject
		topic.postMessage("New Message");
	}
}
