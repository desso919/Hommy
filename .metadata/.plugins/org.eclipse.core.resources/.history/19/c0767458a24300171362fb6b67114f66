package com.hommy.service.interfaces;

public interface ITopic {

	// methods to register and unregister observers
	/**
	 * This methods is for register new device.
	 * 
	 * @param device to be add
	 */
	public void register(IDeviceSubscriber device);

	/**
	 * This methods is for óíregister device.
	 * 
	 * @param device to be add
	 */
	public void unregister(IDeviceSubscriber device);

	// method to notify observers of change
	public void notifySubscribers();

	// method to get updates from subject
	public Object getUpdate(IDeviceSubscriber device);
}
