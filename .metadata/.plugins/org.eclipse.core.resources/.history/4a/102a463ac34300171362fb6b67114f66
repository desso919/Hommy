package com.hommy.service;

import java.util.ArrayList;
import java.util.List;

import com.hommy.service.interfaces.ITopic;
import com.hommy.service.topics.TemperatureTopic;
import com.hommy.service.topics.TimeTopic;

public class TopicsPool {

	List<ITopic> topics = new ArrayList<ITopic>();

	public TopicsPool(List<ITopic> topics) {
		this.topics = topics;
	}

	public List<ITopic> getTopics() {
		return topics;
	}

	public void setTopics(List<ITopic> topics) {
		this.topics = topics;
	}

	public boolean addTopic(ITopic topic) {
		if(topic != null) {
			return topics.add(topic);
		}
	}

	public static ITopic getTopic(String topicName) {

		ITopic topic = null;

		if (topicName.equalsIgnoreCase("Time")) {
			topic = new TimeTopic();
		} else if (topicName.equalsIgnoreCase("Temperature")) {
			topic = new TemperatureTopic();
		}

		return topic;
	}
}
