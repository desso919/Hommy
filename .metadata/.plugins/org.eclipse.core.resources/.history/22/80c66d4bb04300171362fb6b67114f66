package com.hommy.service.subscribers;

import com.hommy.service.ISubject;
import com.hommy.service.interfaces.IDeviceSubscriber;

public abstract class DevcieSubscriber implements IDeviceSubscriber {

	private String name;
	private ISubject topic;

	public DevcieSubscriber(String nm) {
		this.name = nm;
	}

	@Override
	public void update() {
		String msg = (String) topic.getUpdate(this);
		if (msg == null) {
			System.out.println(name + ":: No new message");
		} else
			System.out.println(name + ":: Consuming message::" + msg);
	}

	@Override
	public void set this.topic=sub;
}}
