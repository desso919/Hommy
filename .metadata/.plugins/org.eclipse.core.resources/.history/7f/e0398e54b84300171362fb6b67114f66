package com.hommy.service;

import com.fasterxml.jackson.core.JsonProcessingException;
import com.fasterxml.jackson.databind.ObjectMapper;
import com.hommy.service.interfaces.ITopic;

public class Publication {

	private int id;
	private ITopic topic;
	private String oldValue;
	private String newValue;
	private String message;

	public Publication() {
	}

	public Publication(int id, ITopic topic, String oldValue, String newValue, String message) {
		this.id = id;
		this.topic = topic;
		this.oldValue = oldValue;
		this.newValue = newValue;
		this.message = message;
	}

	public int getId() {
		return id;
	}

	public void setId(int id) {
		this.id = id;
	}

	public ITopic getTopic() {
		return topic;
	}

	public void setTopic(ITopic topic) {
		this.topic = topic;
	}

	public String getOldValue() {
		return oldValue;
	}

	public void setOldValue(String oldValue) {
		this.oldValue = oldValue;
	}

	public String getNewValue() {
		return newValue;
	}

	public void setNewValue(String newValue) {
		this.newValue = newValue;
	}

	public String getMessage() {
		return message;
	}

	public void setMessage(String message) {
		this.message = message;
	}

	@Override
	public String toString() {
		return "Publication [id=" + id + ", topic=" + topic + ", oldValue=" + oldValue + ", newValue=" + newValue
				+ ", message=" + message + "]";
	}

	public String toJSON() throws JsonProcessingException {
		ObjectMapper mapper = new ObjectMapper();
		return mapper.writeValueAsString(this);
	}
}
